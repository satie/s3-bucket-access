{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Metadata": {},
    "Resources": {
        "S3Bucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": {
                    "Fn::Sub": "${AWS::StackName}-${product}-${environment}"
                },
                "BucketEncryption": {
                    "ServerSideEncryptionConfiguration": [
                        {
                            "ServerSideEncryptionByDefault": {
                                "SSEAlgorithm": "AES256"
                            }
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Product",
                        "Value": {
                            "Ref": "product"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "environment"
                        }
                    },
                    {
                        "Key": "Stack",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ]
            },
            "Metadata": {}
        },
        "S3ReadOnlyGroup": {
            "Type": "AWS::IAM::Group",
            "Properties": {
                "GroupName": {
                    "Fn::Sub": [
                        "${BucketName}-ReadOnly-Group",
                        {
                            "BucketName": {
                                "Ref": "S3Bucket"
                            }
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": {
                            "Fn::Sub": [
                                "${BucketName}-ReadOnly-Policy",
                                {
                                    "BucketName": {
                                        "Ref": "S3Bucket"
                                    }
                                }
                            ]
                        },
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": {
                                "Action": [
                                    "s3:ListBucket"
                                ],
                                "Effect": "Allow",
                                "Resource": [
                                    {
                                        "Fn::GetAtt": [
                                            "S3Bucket",
                                            "Arn"
                                        ]
                                    },
                                    {
                                        "Fn::Sub": [
                                            "${BucketArn}/*",
                                            {
                                                "BucketArn": {
                                                    "Fn::GetAtt": [
                                                        "S3Bucket",
                                                        "Arn"
                                                    ]
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        }
                    }
                ]                
            }
        },
        "S3ReadWriteGroup": {
            "Type": "AWS::IAM::Group",
            "Properties": {
                "GroupName": {
                    "Fn::Sub": [
                        "${BucketName}-ReadWrite-Group",
                        {
                            "BucketName": {
                                "Ref": "S3Bucket"
                            }
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": {
                            "Fn::Sub": [
                                "${BucketName}-ReadWrite-Policy",
                                {
                                    "BucketName": {
                                        "Ref": "S3Bucket"
                                    }
                                }
                            ]
                        },
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": {
                                "Action": [
                                    "s3:ListBucket",
                                    "s3:PutObject"
                                ],
                                "Effect": "Allow",
                                "Resource": [
                                    {
                                        "Fn::GetAtt": [
                                            "S3Bucket",
                                            "Arn"
                                        ]
                                    },
                                    {
                                        "Fn::Sub": [
                                            "${BucketArn}/*",
                                            {
                                                "BucketArn": {
                                                    "Fn::GetAtt": [
                                                        "S3Bucket",
                                                        "Arn"
                                                    ]
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        }
                    }                    
                ]                
            }
        },
        "BucketReadOnlyUserKey": {
            "Type": "AWS::IAM::AccessKey",
            "Properties": {
                "UserName": {
                    "Ref": "BucketReadOnlyUser"
                }
            },
            "Metadata": {}
        },
        "BucketReadOnlyUser": {
            "Type": "AWS::IAM::User",
            "Properties": {
                "UserName": {
                    "Fn::Sub": [
                        "${BucketName}-ReadyOnly-User",
                        {
                            "BucketName": {
                                "Ref": "S3Bucket"
                            }
                        }
                    ]
                },
                "Groups" : [
                    { "Ref": "S3ReadOnlyGroup" }
                ],
                "Tags": [
                    {
                        "Key": "Product",
                        "Value": {
                            "Ref": "product"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "environment"
                        }
                    },
                    {
                        "Key": "Stack",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ]
            },
            "Metadata": {}
        },
        "BucketReadWriteUserKey": {
            "Type": "AWS::IAM::AccessKey",
            "Properties": {
                "UserName": {
                    "Ref": "BucketReadWriteUser"
                }
            },
            "Metadata": {}
        },
        "BucketReadWriteUser": {
            "Type": "AWS::IAM::User",
            "Properties": {
                "UserName": {
                    "Fn::Sub": [
                        "${BucketName}-ReadWrite-User",
                        {
                            "BucketName": {
                                "Ref": "S3Bucket"
                            }
                        }
                    ]
                },
                "Groups": [
                    { "Ref": "S3ReadWriteGroup" }
                ],
                "Tags": [
                    {
                        "Key": "Product",
                        "Value": {
                            "Ref": "product"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "environment"
                        }
                    },
                    {
                        "Key": "Stack",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ]
            },
            "Metadata": {}
        },
        "ReadOnlySecret": {
            "Type": "AWS::SecretsManager::Secret",
            "Properties": {
                "Name": {
                    "Fn::Sub": [
                        "${BucketName}-ReadOnly-Secret",
                        {
                            "BucketName": {
                                "Ref": "S3Bucket"
                            }
                        }
                    ]
                },
                "Description": "Access and secret keys for read-only user",
                "SecretString": {
                    "Fn::Sub": [
                        "{\"UserID\": \"${ReadOnlyUserArn}\", \"ACCESS_KEY_ID\": \"${AccessKey}\", \"SECRET_ACCESS_KEY\": \"${SecretAccessKey}\"}",
                        {
                            "ReadOnlyUserArn": {
                                "Fn::GetAtt": [
                                    "BucketReadOnlyUser",
                                    "Arn"
                                ]
                            },
                            "AccessKey": {
                                "Ref": "BucketReadOnlyUserKey"
                            },
                            "SecretAccessKey": {
                                "Fn::GetAtt": [
                                    "BucketReadOnlyUserKey",
                                    "SecretAccessKey"
                                ]
                            }
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Product",
                        "Value": {
                            "Ref": "product"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "environment"
                        }
                    },
                    {
                        "Key": "Stack",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ]
            }
        },
        "ReadWriteSecret": {
            "Type": "AWS::SecretsManager::Secret",
            "Properties": {
                "Name": {
                    "Fn::Sub": [
                        "${BucketName}-ReadWrite-Secret",
                        {
                            "BucketName": {
                                "Ref": "S3Bucket"
                            }
                        }
                    ]
                },
                "Description": "Access and secret keys for read-write user",
                "SecretString": {
                    "Fn::Sub": [
                        "{\"UserID\": \"${ReadWriteUserArn}\", \"ACCESS_KEY_ID\": \"${AccessKey}\", \"SECRET_ACCESS_KEY\": \"${SecretAccessKey}\"}",
                        {
                            "ReadWriteUserArn": {
                                "Fn::GetAtt": [
                                    "BucketReadWriteUser",
                                    "Arn"
                                ]
                            },
                            "AccessKey": {
                                "Ref": "BucketReadWriteUserKey"
                            },
                            "SecretAccessKey": {
                                "Fn::GetAtt": [
                                    "BucketReadWriteUserKey",
                                    "SecretAccessKey"
                                ]
                            }
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "Product",
                        "Value": {
                            "Ref": "product"
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "environment"
                        }
                    },
                    {
                        "Key": "Stack",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ]
            }
        }
    },
    "Parameters": {
        "product": {
            "Type": "String",
            "Default": "s3.satie.io",
            "Description": "Product Name"
        },
        "environment": {
            "Type": "String",
            "Default": "dev",
            "AllowedValues": [
                "dev",
                "test",
                "stage",
                "production"
            ],
            "Description": "Deployment environment"
        }
    },
    "Outputs": {
        "BucketName": {
            "Description": "S3 bucket",
            "Value": {
                "Ref": "S3Bucket"
            }
        },
        "S3ReadOnlyGroup": {
            "Description": "Read-only group for S3 bucket",
            "Value": {
                "Ref": "S3ReadOnlyGroup"
            }
        },
        "S3ReadWriteGroup": {
            "Description": "Read-write managed group for S3 bucket",
            "Value": {
                "Ref": "S3ReadWriteGroup"
            }
        },
        "ReadOnlyUserSecret": {
            "Description": "Secrets Manager secret with IAM credentials for read-only user",
            "Value": {
                "Ref": "ReadOnlySecret"
            }
        },        
        "ReadWriteUserSecret": {
            "Description": "Secrets Manager secret with IAM credentials for read-write user",
            "Value": {
                "Ref": "ReadWriteSecret"
            }
        }
    }
}